<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_led_control"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="online.ga78col.wheatley.LedControl">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_top">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/r"
            android:textSize="@dimen/textColorSize"
            android:text="R" />

        <SeekBar
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:max="@string/progressMax"
            android:progress="0"
            android:id="@+id/red_seekbar"
            android:thumbTint="@color/red"
            android:progressTint="@color/red"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/textColorSize"
            android:id="@+id/redShowNumber"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_top">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/textColorSize"
            android:id="@+id/g"
            android:text="G" />

        <SeekBar
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:max="@string/progressMax"
            android:progress="0"
            android:id="@+id/green_seekbar"
            android:thumbTint="@color/green"
            android:progressTint="@color/green"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/textColorSize"
            android:id="@+id/greenShowNumber"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_top">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/textColorSize"
            android:id="@+id/b"
            android:text="B" />

        <SeekBar
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:max="@string/progressMax"
            android:progress="0"
            android:id="@+id/blue_seekbar"
            android:thumbTint="@color/blue"
            android:progressTint="@color/blue"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/blueShowNumber"
            android:textSize="@dimen/textColorSize"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/margin_top">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fade"
            android:textColor="@color/red"
            android:id="@+id/button_fade"
            android:background="@color/blue"
            android:layout_marginEnd="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom"
            android:textColor="@color/gray"
            android:id="@+id/button_custom"
            android:layout_marginEnd="30dp"
            android:background="@color/black" />


    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OFF"
            android:id="@+id/button_off"
            android:layout_marginTop="30dp"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
</LinearLayout>
