<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_e_sockets"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="100dp"
    android:paddingRight="100dp"
    android:paddingTop="50dp"
    android:weightSum="1"
    app:layout_collapseParallaxMultiplier="0.9"
    tools:context="online.ga78col.wheatley.eSockets">

    <Switch
        android:id="@+id/button_light"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="left"
        android:switchMinWidth="50dp"
        android:text="UK Lights"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:thumbTint="@android:color/holo_blue_bright"/>

    <Switch
        android:id="@+id/button_bed_lights"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="left"
        android:switchMinWidth="50dp"
        android:text="Bed Lights"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:thumbTint="@android:color/holo_blue_bright" />


    <Switch
        android:id="@+id/button_smartphone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="left"
        android:switchMinWidth="50dp"
        android:text="Bed Power"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:thumbTint="@android:color/holo_blue_bright" />

    <Switch
        android:id="@+id/button_stereo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="left"
        android:switchMinWidth="50dp"
        android:text="Music"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:thumbTint="@android:color/holo_blue_bright" />

    <Switch
        android:id="@+id/button_desktop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="left"
        android:switchMinWidth="50dp"
        android:text="Monitors"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:thumbTint="@android:color/holo_blue_bright"/>

    <Switch
        android:id="@+id/button_off"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="left"
        android:switchMinWidth="50dp"
        android:text="All On/Off"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:thumbTint="@android:color/holo_blue_bright"/>


</LinearLayout>
