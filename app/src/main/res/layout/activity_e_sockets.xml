<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_e_sockets"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="online.ga78col.wheatley.eSockets">

    <Button
        android:text="Steckdose 1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:id="@+id/button_socket_1"
        android:layout_marginTop="@dimen/margin_button"/>

    <Button
        android:text="Steckdose 2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:id="@+id/button_socket_2"
        android:layout_marginTop="@dimen/margin_button"/>

    <Button
        android:text="Steckdose 3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:id="@+id/button_socket_3"
        android:layout_marginTop="@dimen/margin_button"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_button"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <Button
            android:text="Sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_socket_sync"/>
        <Button
            android:text="Off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/button_socket_off"/>

        </RelativeLayout>
</LinearLayout>
